@model Assignment2.Models.Pie

@*@using My_Pie_Shop.Models
@model Pie*@

<h2> @Model.Name</h2>

<div class = "thumbnail">
    <img alt= "@Model.Name" src ="@Model.ImageUrl" >
    <div class="caption-full">
        <h3 class="pull-right">Rs.@Model.Price</h3>
        <h3><a href="#">@Model.Name</a></h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Pie" asp-action="Details"
                   asp-route-id="@Model.PieId">Add to cart</a>
            </p>
        </div>
    </div>
</div>